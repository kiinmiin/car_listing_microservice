generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  name         String
  phone        String?
  subscription String    @default("free") // free, premium, spotlight
  premiumListingsRemaining Int @default(0)
  subscriptionExpiresAt DateTime? // When the subscription expires
  subscriptionStartedAt DateTime? // When the subscription started
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  listings     Listing[]
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int
  currency    String   @default("USD")
  make        String
  model       String
  year        Int
  mileage     Int
  location    String
  images      String[]
  features    String[] @default([])
  featured    Boolean  @default(false)
  featuredUntil DateTime?
  exterior    String?  // Color/condition
  interior    String?  // Color/material
  transmission String? // Manual, Automatic, CVT, etc.
  fuel        String?  // Gas, Diesel, Electric, Hybrid, etc.
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([make, model, year])
  @@index([price])
  @@index([featured])
}
